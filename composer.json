{
    "name": "drabek-digital/captcha",
    "description": "ðŸ¤– Nette Forms extension for Cloudflare Turnstile and hCaptcha integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Drabek Digital",
            "email": "info@drabek.digital"
        }
    ],
    "require": {
        "php": ">=7.4",
        "nette/forms": "^3.0",
        "nette/di": "^3.0",
        "nette/http": "^3.0",
        "nette/utils": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "symplify/easy-coding-standard": "~12.0",
        "phpstan/phpstan": "^2.0",
        "spaze/phpstan-disallowed-calls": "^4.0",
        "spaze/phpstan-disallowed-calls-nette": "^3.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DrabekDigital\\Captcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DrabekDigital\\Captcha\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "stan": "./vendor/bin/phpstan analyse src tests",
        "unit": "./vendor/bin/phpunit tests",
        "sniff": "./vendor/bin/ecs check src tests",
        "sniff-fix": "./vendor/bin/ecs check src tests --fix",
        "all": [
            "composer sniff",
            "composer stan",
            "composer unit"
        ]
    }
}
